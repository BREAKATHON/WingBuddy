  include login.pug 
else 
  section.jumbotron.d-flex.flex-row.justify-content-end
    h1.mr-5.text-info 
      | Registration 
  section.container 
    ul.nav.nav-tabs
      li.nav-item
        if isSeeker
          a.nav-link.active(href='#')
            | I am looking for a buddy
        else 
          a.nav-link(href='/signup?isVolunteer=false')
            | I am looking for a buddy
      li.nav-item
        if isSeeker
          a.nav-link(href='/signup?isVolunteer=true')
            | I want to become a buddy
        else 
          a.nav-link.active(href='#')
            | I want to become a buddy
    if isSeeker
      include signupSeeker.pug
    else 
      include signupVolunteer.pug
